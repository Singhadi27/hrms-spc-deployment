# Clone repositories during deployment
FROM alpine/git:latest

# Set working directory
WORKDIR /app

# Clone repositories (will be cached if no changes)
RUN git clone https://github.com/7UpadhyayKrishna/hrms-backend.git hrms-backend && \
    git clone https://github.com/7UpadhyayKrishna/hrms-spc.git hrms-spc

# Keep container running (for dependency management)
CMD ["tail", "-f", "/dev/null"]